{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/gateway",
  "generateOptions": {
    "spec": false
  },
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "presenter": {
      "type": "application",
      "root": "apps/presenter",
      "entryFile": "main",
      "sourceRoot": "apps/presenter/src",
      "compilerOptions": {
        "tsConfigPath": "apps/presenter/tsconfig.app.json"
      }
    },
    "db-filler": {
      "type": "application",
      "root": "apps/db-filler",
      "entryFile": "main",
      "sourceRoot": "apps/db-filler/src",
      "compilerOptions": {
        "tsConfigPath": "apps/db-filler/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}